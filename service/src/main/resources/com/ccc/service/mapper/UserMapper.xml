<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccc.service.mapper.UserMapper">
    <update id="update">
        update user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
        </set>
        where id = #{id} and version = #{version}
    </update>
    <select id="getUser" resultType="com.example.pojo.entity.User">
        select * from user
        <where>
            <if test="username != null">
                username = #{username}
            </if>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>
</mapper>